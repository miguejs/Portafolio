<div class="container">
  <div class="row">
  <% @posts.each do |post| %>
    <div class="col s6 l4 m4">
      <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <img  class="activator" src="<%= post.picture %>" alt="clik para ir al post" />
        </div>
        <div class="card-content">
          <span class="card-title activator blue-text ">
            <%= link_to post.title, post %>
            <%if user_signed_in?%>
            <%= link_to(raw("" +("<i class='mdi-content-clear right'></i>")), post, method: :delete, data: { confirm: 'Estas seguro?' } )%>




            <%  end %>
              <a href="#">  <i class="mdi-navigation-more-vert right"></i></a>
          </span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= post.title %> <i class="mdi-navigation-close right"></i></span>
            <p><%= post.description %></p>
        </div>
          <!-- <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> -->
      </div>
    </div>
   <% end %>
  </div>

  <%if user_signed_in?%>
    <div class="col l12 ">
      <p class="right-align">
        <a  href="<%=new_post_path %>"class="btn-floating btn-large waves-effect waves-light blue"><i class="mdi-content-add"></i></a>
      </p>
    </div>
  <%  end %>
</div>
